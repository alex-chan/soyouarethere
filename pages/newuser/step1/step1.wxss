/* pages/new/new.wxss */

.container {
    
    background-color: #f6f5f1;
}

.container .section {

  /*height: 100%;*/
  display: flex;
  flex-direction: column;
  align-items: stretch;
  justify-content: space-between;
  padding: 20rpx 0 0 0;
  box-sizing: border-box;

}

.container .section .section-title {
    padding: 0 20rpx;
}
.container .section .section-body {
    padding: 0 20rpx;
    background-color: #FFFFFF;
}

.container .section .row {
    display: flex;
    justify-content: space-between;
    border-bottom: 1px solid lightgray;
    line-height: 86rpx;
}

.container .section .row.last-row{
    border-bottom: none;
}